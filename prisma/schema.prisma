generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Region {
  id   String @id @default(uuid())
  name String @unique
  country String
  City City[]
}

model City {
  id          String      @id @default(uuid())
  name        String      @unique
  regionId    String?
  region      Region?     @relation(fields: [regionId], references: [id])
  sights      Sight[]
  specialties Specialty[]
  teams       Team[]
}

model Specialty {
  id          String  @id @default(uuid())
  name        String  @unique
  description String?
  cityId      String?
  City        City?   @relation(fields: [cityId], references: [id])
}

model Sight {
  id          String  @id @default(uuid())
  name        String  @unique
  description String?
  cityId      String?
  City        City?   @relation(fields: [cityId], references: [id])
}

model Sport {
  id   String @id @default(uuid())
  name String @unique
  Team Team[]
}

model Team {
  id       String   @id @default(uuid())
  name     String   @unique
  cityId   String?
  sportId  String?
  leagueId String?
  hometown City?     @relation(fields: [cityId], references: [id])
  sport    Sport?   @relation(fields: [sportId], references: [id])
  league   League?  @relation(fields: [leagueId], references: [id])
}

model League {
  id     String  @id @default(uuid())
  name   String  @unique
  Team  Team[]
}
